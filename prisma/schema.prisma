generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Pokemon {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  type     String
  caughtBy String
  userId   String @db.ObjectId
  user     User   @relation(fields: [userId], references: [id])
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  email    String    @unique
  password String
  pokemons Pokemon[]
}
